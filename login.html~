<script>

	var userName = "Guest";
	document.getElementById("uName").innerHTML = userName;
	
	function createUser()
	{	
		var userName = document.getElementById("uNameText").value;
		document.cookie='IDCOOKIE='+ Math.floor(Math.random()*1000000);
		document.getElementById("uName").innerHTML = userName;
		document.cookie='UNCOOKIE='+userName;
	}
	function resetWorld()
	{
		document.cookie='WRCOOKIE='+'1';
	}
	
</script>
